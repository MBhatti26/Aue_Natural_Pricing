# AuÃª Natural - PowerBI Integration Configuration
# Copy this to .env file and configure your PowerBI credentials

# PowerBI Integration Settings
POWERBI_ENABLED=false  # Set to 'true' to enable automatic dashboard updates

# PowerBI Service Credentials (get these from PowerBI Admin Portal)
POWERBI_WORKSPACE_ID=your-workspace-id-here
POWERBI_DATASET_ID=your-dataset-id-here  
POWERBI_CLIENT_ID=your-app-client-id-here
POWERBI_CLIENT_SECRET=your-app-client-secret-here
POWERBI_TENANT_ID=your-tenant-id-here

# Alternative: PowerBI Gateway Configuration
POWERBI_GATEWAY_ID=your-gateway-id-here

# Notification Settings
POWERBI_NOTIFY_EMAIL=true
POWERBI_NOTIFY_TEAMS=false

# Dashboard URLs (for reference)
POWERBI_EXECUTIVE_DASHBOARD=https://app.powerbi.com/groups/{workspace}/dashboards/{dashboard-id}
POWERBI_PRICING_DASHBOARD=https://app.powerbi.com/groups/{workspace}/dashboards/{dashboard-id}
POWERBI_POSITIONING_DASHBOARD=https://app.powerbi.com/groups/{workspace}/dashboards/{dashboard-id}
POWERBI_RETAILER_DASHBOARD=https://app.powerbi.com/groups/{workspace}/dashboards/{dashboard-id}

# Data Refresh Settings
POWERBI_REFRESH_SCHEDULE=immediate  # Options: immediate, hourly, daily
POWERBI_MAX_REFRESH_ATTEMPTS=3
